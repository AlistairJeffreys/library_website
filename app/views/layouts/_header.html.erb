<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Springfield Libraries", root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path, id: "nav-item" %></li>
        <li><%= link_to "Help",   help_path, id: "nav-item" %></li>
        <li><%= link_to "Books", books_path, id: "nav-item" %></li>
        <li><%= link_to "Authors", authors_path, id: "nav-item" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, id: "nav-item" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="nav-item" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: "nav-item" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
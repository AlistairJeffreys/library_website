<% provide(:title, 'Add new Book') %>
<h1>Add new Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/book_error_messages' %>
    
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
      
      <%= f.label :isbn %>
      <%= f.number_field :isbn, class: 'form-control' %>
      
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      
      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>
      
      <%= f.label :publication_date %>
      <%= f.select :publication_date, (Time.zone.now.year - 100)..(Time.zone.now.year + 1), class: 'form-control' %>
      
      <%= f.label :publisher %>
      <%= f.text_field :publisher, class: 'form-control' %>
      
      <span class="picture">
        <%= f.label :picture %>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      
      <%= f.submit "Create Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#book_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>